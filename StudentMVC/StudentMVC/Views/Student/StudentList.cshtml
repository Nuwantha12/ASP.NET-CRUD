@model List<StudentMVC.Context.tbl_Student>
@{
    ViewBag.Title = "StudentList";
}

<h2>StudentList</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>FName</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
            <tr>
                <td>@item.Name</td>
                <td>@item.FName</td>
                <td>@item.Email</td>
                <td>@item.Mobile</td>
                <td>@item.Description</td>
                <td>
                    <a href="@Url.Action("Student",new { item.ID,item.Name,item.FName,item.Email,item.Mobile,item.Description})" class="btn btn-success">UPDATE</a>
                    <a href="@Url.Action("Delete",new { item.ID})" class="btn btn-danger">DELETE</a>
                </td>
            </tr>

            }
    </tbody>
</table>

